{
  "project_context": {
    "name": "agent-doc-system",
    "type": "python_framework",
    "primary_language": "python",
    "framework_type": "agent_communication",
    "development_stage": "maintenance_optimization"
  },
  "agent_communication": {
    "message_storage_path": "framework/agent_communication/history/agent_messages.json",
    "cleanup_policy": {
      "default_retention_days": 7,
      "archive_processed_messages": true,
      "max_message_file_size_mb": 10
    },
    "validation": {
      "strict_mode": true,
      "auto_validate_on_send": true,
      "pydantic_models": true
    }
  },
  "development_preferences": {
    "code_style": {
      "formatter": "black",
      "line_length": 100,
      "quote_style": "double"
    },
    "type_checking": {
      "mypy_strict": true,
      "require_type_hints": true
    },
    "testing": {
      "framework": "pytest",
      "coverage_threshold": 90,
      "test_driven_development": true
    }
  },
  "workflow_automation": {
    "auto_format_on_save": true,
    "run_tests_on_commit": true,
    "validate_schemas_on_change": true
  }
}